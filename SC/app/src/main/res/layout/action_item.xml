<?xml version="1.0" encoding="utf-8"?>    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:orientation="vertical"    
    android:layout_width="fill_parent"    
    android:layout_height="fill_parent"
    android:background="#fff">   
    <TableLayout
        android:id="@+id/item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"> 
	 <TableRow
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:visibility="gone" >

         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="pckId:"/>
         <TextView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/item_pckId"
             android:enabled="false"/>
     </TableRow>
     
     <TableRow
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" >

         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="订单号:"/>
         <TextView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/item_pkt"
             android:enabled="false"/>
     </TableRow>

     <TableRow
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="3dp" >

         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="ZONE:"/>
         <TextView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/item_zone"
             android:enabled="false"/>
     </TableRow>

     <TableRow
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="3dp" >

         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="SKU:"/>
         <TextView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/item_sku"
             android:enabled="false"/>
     </TableRow>
	
     <TableRow
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="3dp" >

         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="名称:"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/item_desc"
             android:text="dfsafdsafdsafdsafdsafdsf"
             android:enabled="false"
             android:ellipsize="end"
	    	 android:singleLine="true"
	    	 android:maxLength="38"/>
     </TableRow>
     <TableRow
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="3dp" >

         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="行号:"/>
         <TextView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/item_ordseq"
             android:enabled="false"/>
     </TableRow>

     <TableRow
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="3dp" >

         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="数量:"/>
         <TextView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/item_num"
             android:enabled="false"/>
     </TableRow>

     <TableRow
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="3dp" >

         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="短拣:"/>
		 <EditText
             android:id="@+id/item_refnum1"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/my_shape_1"
             android:numeric="integer"/>
         
		<!-- <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="可以修改"
             android:textColor="#CC00FF"/> -->
     </TableRow>

     <TableRow
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="3dp" >

         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="备注:"/>
		<EditText
             android:id="@+id/item_tonbr"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
         	 android:background="@drawable/my_shape_1"/>
         
         <!-- <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="可以添加"
             android:textColor="#CC00FF"/> -->

     </TableRow>

    </TableLayout>
    
     
</LinearLayout> 